{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@lib/*": ["src/lib/*"],
      "@jobs/*": ["src/jobs/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@test/*": ["test/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "prisma", "test", "types", "vitest.config.ts", "tsup.config.ts"],
  "exclude": ["dist", "node_modules"]
}
